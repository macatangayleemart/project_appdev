<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 15px;
        }

        .navbar-brand {
            font-family: 'Sacramento', cursive;
            color: #fff;
            font-size: 2rem;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c830;
        }

        .container {
            margin-top: 50px;
        }

        .form-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-card h2 {
            font-family: 'Sacramento', cursive;
            color: #343a40;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

        .form-group label {
            font-weight: 500;
            color: #343a40;
        }

        .btn {
            font-size: 1.2rem;
            padding: 10px 20px;
            margin-top: 15px;
            width: 100%;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-card {
                padding: 15px;
            }

            .form-card h2 {
                font-size: 2rem;
            }

            .btn {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-basket-shopping"></i> Handicraft Baskets
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/clientdashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a class="nav-link" href="/cart">
                    <i class="fas fa-shopping-cart"></i> Cart
                </a>
                <a class="nav-link" href="/order-history">
                    <i class="fas fa-history"></i> Order History
                </a>
                <a class="nav-link" href="/profile">
                    <i class="fas fa-user"></i> Profile
                </a>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Form Content -->
    <div class="container">
        <div class="form-card">
            <h2>Edit Address</h2>
            <form action="/edit-address" method="POST">
                <div class="form-group">
                    <label for="address">New Address</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%= user.address %>" required />
                </div>
                <input type="hidden" name="userId" value="<%= user._id %>" />
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>

            <!-- Back to Profile Button -->
            <form action="/profile" method="GET">
                <button type="submit" class="btn btn-secondary">Back to Profile</button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
