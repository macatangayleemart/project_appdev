<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 15px;
        }

        .navbar-brand {
            font-family: 'Sacramento', cursive;
            color: #fff;
            font-size: 2rem;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c830;
        }

        .container {
            margin-top: 50px;
        }

        .cart-title {
            font-family: 'Sacramento', cursive;
            color: #343a40;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

        .cart-item {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            padding: 20px;
            margin-bottom: 20px;
        }

        .cart-item img {
            width: 100px; /* Adjust width */
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 20px;
        }

        .cart-item-details {
            flex-grow: 1;
        }

        .cart-item-name {
            font-size: 1.5rem;
            color: #343a40;
            font-weight: 600;
        }

        .cart-item-price {
            font-size: 1.2rem;
            color: #f8c830;
            margin-top: 10px;
        }

        .cart-item-quantity {
            margin-top: 10px;
        }

        .quantity-buttons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .quantity-buttons button {
            background-color: #f8c830;
            border: none;
            padding: 8px 12px;
            font-size: 1rem;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
        }

        .quantity-buttons button:hover {
            background-color: #e0a800;
        }

        .cart-item-actions {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
        }

        .remove-button {
            background-color: #dc3545;
            border: none;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 1rem;
            margin-top: 10px;
            cursor: pointer;
        }

        .remove-button:hover {
            background-color: #c82333;
        }

        .checkout-button {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            border: none;
            color: white;
            border-radius: 5px;
            font-size: 1.2rem;
            cursor: pointer;
            margin-top: 30px;
        }

        .checkout-button:hover {
            background-color: #218838;
        }

        .empty-cart {
            text-align: center;
            font-size: 1.5rem;
            color: #888;
        }

        .back-to-dashboard {
            display: block;
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
            color: #007bff;
            text-decoration: none;
        }

        .back-to-dashboard:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .cart-item {
                flex-direction: column;
                align-items: center;
            }

            .cart-item img {
                margin-bottom: 15px;
            }

            .cart-item-actions {
                align-items: center;
            }
        }
    </style>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-basket-shopping"></i> Handicraft Baskets
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
                <a class="nav-link" href="/order-history"><i class="fas fa-history"></i> Order History</a>
                <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>
                <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <!-- Cart Content -->
    <div class="container">
        <h2 class="cart-title">Your Cart</h2>

        <% if (cart && cart.length > 0) { %>
            <form action="/checkout" method="POST">
                <div class="cart-items">
                    <% cart.forEach(function(item) { %>
                        <div class="cart-item">
                                <!-- Checkbox for selecting items for checkout -->
                            <input type="checkbox" name="selectedItems" value="<%= item._id %>" class="cart-checkbox">
                             <!-- Display product image -->
                            <% if (item.image) { %>
                                <img src="data:image/jpeg;base64,<%= item.image %>" alt="<%= item.name %>">
                            <% } else { %>
                                <img src="/path/to/default-image.jpg" alt="<%= item.name %>">
                            <% } %>
                            <div class="cart-item-details">
                                <div class="cart-item-name"><%= item.name %></div>
                                <div class="cart-item-price">â‚±<%= item.price.toFixed(2) %></div>
                                <div class="cart-item-quantity">
                                    Quantity: <%= item.quantity %>
                                </div>
                                <div class="quantity-buttons">
                                    <button type="button" onclick="editQuantity('<%= item._id %>')">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button type="button" onclick="removeFromCart('<%= item._id %>')">
                                        <i class="fas fa-trash-alt"></i> Remove
                                    </button>
                                </div>
                            </div>
                            <div class="cart-item-actions">
                                <button type="button" class="remove-button" onclick="removeFromCart('<%= item._id %>')">
                                    <i class="fas fa-trash-alt"></i> Remove Item
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <button type="submit" class="checkout-button">Proceed to Checkout</button>
            </form>
        <% } else { %>
            <p class="empty-cart">Your cart is empty.</p>
        <% } %>

        <a href="/clientdashboard" class="back-to-dashboard">Back to Dashboard</a>
    </div>

    <script>
        function editQuantity(productId) {
            const url = `/edit-quantity?productId=${productId}`;
            window.location.href = url;
        }

        function removeFromCart(productId) {
            fetch('/remove-from-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId: productId }),
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to remove item from cart.');
                }
            })
            .catch(error => console.error('Error:', error));
        }
    </script>

</body>

</html>
