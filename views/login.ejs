<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,300,400,500,700,900&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="/assets/css/style.css">

    <style>
        /* Full-screen container */
        body {
            background-image: url('background.jpg'); /* Background image */
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        /* Applying roasted glass (frosted glass) effect */
        .login-section {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .login-box {
            background: rgba(255, 255, 255, 0.1); /* Semi-transparent white background */
            backdrop-filter: blur(10px); /* Frosted glass blur effect */
            border-radius: 12px;
            padding: 40px 50px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Shadow for depth */
            width: 100%;
            max-width: 400px;
        }

        /* Typography */
        .login-box h2 {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
            color: #fff; /* White text color */
        }

        .form-label {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            color: #fff; /* White label text */
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control {
            padding-left: 40px; /* Adjust space for icons */
        }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 18px;
            color: #fff; /* White icon color */
        }

        .btn-primary {
            background: #007bff;
            border-color: #007bff;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }

        .forgot-password, .sign-up {
            color: #007bff;
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }

        .forgot-password:hover, .sign-up:hover {
            text-decoration: underline;
        }

        /* Add responsiveness */
        @media (max-width: 768px) {
            .login-box {
                width: 80%; /* Make the login box more responsive on smaller screens */
            }
        }
    </style>
</head>

<body>
    <section class="login-section">
        <div class="login-box">
            <h2>Login</h2>
            
            <!-- Display error message if available -->
            <% if (typeof errorMessage !== "undefined") { %>
                <div class="alert alert-danger text-center" role="alert">
                    <%= errorMessage %>
                </div>
            <% } %>
            
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <i class="fa fa-envelope"></i> <!-- Icon for email -->
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <i class="fa fa-lock"></i> <!-- Icon for password -->
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4 w-100">Login</button>
            </form>
            <div class="text-center mt-3">
                <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
            </div>
            <div class="text-center mt-2">
                <p>Don't have an account? <a href="/sign_up" class="sign-up">Sign up</a></p>
            </div>
        </div>
    </section>

    <!-- Scripts -->
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
</body>


</html>
