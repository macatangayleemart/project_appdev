<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 15px;
        }

        .navbar-brand {
            font-family: 'Sacramento', cursive;
            color: #fff;
            font-size: 2rem;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c830;
        }

        .container {
            margin-top: 50px;
        }

        .order-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .order-card h2 {
            font-family: 'Sacramento', cursive;
            color: #343a40;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .order-card ul {
            list-style: none;
            padding: 0;
        }

        .order-card li {
            margin-bottom: 10px;
            color: #555;
        }

        .order-card strong {
            color: #343a40;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .order-card h2 {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-basket-shopping"></i> Handicraft Baskets
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/clientdashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a class="nav-link" href="/cart">
                    <i class="fas fa-shopping-cart"></i> Cart
                </a>
                <a class="nav-link" href="/order-history">
                    <i class="fas fa-history"></i> Order History
                </a>
                <a class="nav-link" href="/profile">
                    <i class="fas fa-user"></i> Profile
                </a>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Orders Content -->
    <div class="container">
        <h1 class="text-center mb-4">My Orders</h1>
        <% orders.forEach(order => { %>
            <div class="order-card">
                <h1>Order ID: <%= order._id %></h1>
                <p><strong>Status:</strong> <%= order.status %></p>
                <p><strong>Items:</strong></p>
                <ul>
                    <% order.items.forEach(item => { %>
                        <li>
                            <%= item.name %> - <%= item.quantity %> @ <%= item.price %> each
                        </li>
                    <% }) %>
                </ul>
                <p><strong>Total:</strong> $<%= order.totalAmount.toFixed(2) %></p>
                <p><strong>Placed on:</strong> <%= order.createdAt.toDateString() %></p>
            </div>
        <% }) %>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
