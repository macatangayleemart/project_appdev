<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Handicraft Baskets Dashboard</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 15px;
        }

        .navbar-brand {
            font-family: 'Sacramento', cursive;
            color: #fff;
            font-size: 2rem;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c830;
        }

        .container {
            margin-top: 50px;
        }

        .welcome-section h2 {
            font-family: 'Sacramento', cursive;
            font-size: 2.5rem;
            color: #343a40;
            text-align: center;
            margin-bottom: 20px;
        }

        .search-bar form {
            display: flex;
            justify-content: center;
        }

        .search-bar .form-control {
            width: 70%;
            padding: 10px;
        }

        .product-list {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 40px;
        }

        .product-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        .product-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .product-card h4 {
            font-size: 1.5rem;
            color: #343a40;
        }

        .product-card .price {
            font-size: 1.2rem;
            color: #f8c830;
            margin-top: 10px;
        }

        .product-card .description {
            font-size: 1rem;
            color: #888;
            margin-top: 10px;
        }

        .product-card .category,
        .product-card .stock {
            font-size: 0.9rem;
            color: #555;
            margin-top: 5px;
        }

        .add-to-cart-button {
            background-color: #f8c830;
            border: none;
            padding: 8px 12px;
            font-size: 1rem;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 15px;
        }

        .add-to-cart-button:hover {
            background-color: #e0a800;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .product-list {
                grid-template-columns: 1fr 1fr;
            }

            .product-card img {
                height: 150px;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-basket-shopping"></i> Handicraft Baskets
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
                <a class="nav-link" href="/my-orders"><i class="fas fa-history"></i> Orders</a>
                <a class="nav-link" href="/order-history"><i class="fas fa-history"></i> Order History</a>
                <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>
                <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="welcome-section">
            <h2>Welcome, <%= user.name %>!</h2>
           
        </div>

        <!-- Search Bar -->
        <div class="search-bar mb-4 text-center">
            <form action="/clientdashboard/search" method="POST" class="d-flex justify-content-center">
                <input type="text" name="query" class="form-control me-2" placeholder="Search for baskets..." required>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-search"></i> Search
                </button>
            </form>
        </div>

        <!-- Product Listing -->
        <h3 class="text-center">Our Handcrafted Baskets</h3>
        <div class="product-list">
            <% products.forEach(function(product) { %>
                <div class="product-card">
                    <a href="/product/<%= product._id %>">
                        <% if (product.image && product.image.data) { %>
                            <img src="data:<%= product.image.contentType %>;base64,<%= product.image.data.toString('base64') %>" alt="<%= product.name %>" class="img-thumbnail">
                        <% } else { %>
                            <p>No image available!</p>
                        <% } %>
                    </a>
                    <h4><a href="/product/<%= product._id %>"><%= product.name %></a></h4>
                    <p class="price">â‚±<%= product.price.toFixed(2) %></p>
                    <p class="description"><%= product.description %></p>
                    <form action="/clientdashboard/add-to-cart" method="POST">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="add-to-cart-button">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>
                
            <% }); %>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/assets/js/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
