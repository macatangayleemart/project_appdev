<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            padding: 15px;
        }

        .navbar-brand {
            font-family: 'Sacramento', cursive;
            color: #fff;
            font-size: 2rem;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f8c830;
        }

        .container {
            margin-top: 50px;
        }

        .profile-card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .profile-card h2 {
            font-family: 'Sacramento', cursive;
            color: #343a40;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

        .profile-card table {
            width: 100%;
            margin-bottom: 30px;
        }

        .profile-card th {
            text-align: left;
            color: #343a40;
            font-weight: 500;
        }

        .profile-card td {
            color: #555;
            padding-left: 10px;
        }

        .btn {
            font-size: 1.2rem;
            padding: 10px 20px;
            margin-top: 15px;
            width: 100%;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .profile-card {
                padding: 15px;
            }

            .profile-card h2 {
                font-size: 2rem;
            }

            .btn {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/clientdashboard">
                <i class="fas fa-basket-shopping"></i> Handicraft Baskets
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/clientdashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a class="nav-link" href="/cart">
                    <i class="fas fa-shopping-cart"></i> Cart
                </a>
                <a class="nav-link" href="/order-history">
                    <i class="fas fa-history"></i> Order History
                </a>
                <a class="nav-link" href="/profile">
                    <i class="fas fa-user"></i> Profile
                </a>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Profile Content -->
    <div class="container">
        <div class="profile-card">
            <h2>User Profile</h2>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <td><%= user.name %></td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td><%= user.age %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= user.email %></td>
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td><%= user.phno %></td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td><%= user.gender %></td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td><%= user.address %></td>
                </tr>
            </table>

            <!-- Edit Address Button -->
            <form action="/edit-address" method="GET">
                <button type="submit" class="btn btn-primary">Edit Address</button>
            </form>

            <!-- Back to Dashboard Button -->
            <form action="/clientdashboard" method="GET">
                <button type="submit" class="btn btn-secondary">Back to Dashboard</button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
